# Configuración de producción para NexusESI
# Copia este archivo como .env.production y configura las variables

# Aplicación
APP_NAME=NexusESI
APP_ENV=production
APP_DEBUG=false
APP_URL=https://nexusesi.com

# Base de datos
DB_DATABASE=nexusesi_prod
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_USERNAME=nexusesi_user
DB_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=your_jwt_secret_here

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAIL_FROM_ADDRESS=noreply@nexusesi.com
MAIL_FROM_NAME=NexusESI

# SSL
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
